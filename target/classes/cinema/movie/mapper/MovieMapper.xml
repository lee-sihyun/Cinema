<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cinema.movie.mapper.MovieMapper">
	<!-- MV_NUM NOT NULL NUMBER(38) MV_NAME NOT NULL VARCHAR2(1000) MV_DIRECTOR 
		NOT NULL VARCHAR2(1000) MV_CAST NOT NULL VARCHAR2(1000) THEATER_NUM NOT NULL 
		NUMBER(38) -->




	<insert id="insertMovie">
		<selectKey resultType="int" keyProperty="mvNum"
			order="BEFORE">
			select movie_seq.nextval from dual
		</selectKey>

		insert into movie values (#{mvNum},#{mvName},#{mvDirector},
		#{mvCast},#{theaterNum})


	</insert>

	<select id="selectMv" resultType="MovieDTO">
		select * from movie order by mv_num desc
	</select>










</mapper>